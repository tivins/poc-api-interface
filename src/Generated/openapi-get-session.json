{
    "openapi": "3.0.0",
    "info": {
        "title": "",
        "version": "1.0.0"
    },
    "paths": {
        "/session": {
            "get": {
                "summary": "Get current session (user + profile + token)",
                "tags": [
                    "auth"
                ],
                "description": "Returns user and profile data plus session token and expiry.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/GetSessionRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetSessionResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "GetSessionRequest": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    }
                },
                "required": [
                    "id"
                ]
            },
            "GetSessionResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "avatar": {
                        "type": "string"
                    },
                    "bio": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    },
                    "expiresAt": {
                        "type": "integer"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "email",
                    "avatar",
                    "bio",
                    "token",
                    "expiresAt"
                ]
            }
        }
    }
}